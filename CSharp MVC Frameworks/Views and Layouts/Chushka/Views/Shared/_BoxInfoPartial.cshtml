@model Models.ViewModels.Home.IndexProductViewModel[];

@for (int i = 0; i < Model.Length; i++)
{
    @if (i % 5 == 0 && i != 0)
    {
        <div class="w-100"></div>
    }
    <a class="col-md-2" asp-controller="Products" asp-action="Details" asp-route-id="@Model[i].Id">
        <div class="product p-1 chushka-bg-color rounded-top rounded-bottom mb-3">
            <h5 class="text-center mt-3">@Model[i].Name</h5>
            <hr class="hr-1 bg-white" />
            <p class="text-white text-center">@Model[i].ShortDescription</p>
            <hr class="hr-1 bg-white" />
            <h6 class="text-center text-white mb-3">$@Model[i].Price</h6>
        </div>
    </a>
}