@model ProductViewModel

<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" value="@Model?.Name" disabled="@Model?.DisableValue" class="form-control" placeholder="Name..." />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price"></label>
    <input asp-for="Price" value="@Model?.Price" disabled="@Model?.DisableValue" class="form-control" placeholder="Price..." />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description"></label>
    <textarea class="form-control" asp-for="Description" disabled="@Model?.DisableValue" placeholder="Description...">@Model?.Description</textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
