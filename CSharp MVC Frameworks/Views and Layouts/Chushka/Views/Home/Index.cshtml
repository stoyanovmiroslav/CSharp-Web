@{
    ViewData["Title"] = "Home Page";
}

@model IndexProductViewModel[];

@if (User.Identity.IsAuthenticated)
{
    <div class="container-fluid text-center">
        @if (User.IsInRole("Admin"))
        {
            <h2>Greetings, @User.Identity.Name!</h2>
            <h4>Enjoy your work today.</h4>
        }
        else
        {
            <h2>Greetings, @User.Identity.Name!</h2>
            <h4>Feel free to view and order any of our products.</h4>
        }
    </div>
    <hr class="hr-2 bg-dark" />
    <div class="container-fluid product-holder">
        <div class="row d-flex justify-content-around">
            <partial name="_BoxInfoPartial" />
        </div>
    </div>
}
else
{
    <div class="jumbotron mt-10 chushka-bg-color">
        <h2>Welcome to Chushka Universal Web Shop</h2>
        <hr class="bg-white" />
        <h3><a class="nav-link-dark" asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a> if you have an account.</h3>
        <h3><a class="nav-link-dark" asp-area="Identity" asp-controller="Account" asp-action="Register">Register</a> if you have an account.</h3>
    </div>
}